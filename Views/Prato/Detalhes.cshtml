@model PratosModel

<div class="container my-5">
    <div class="p-5 text-center bg-body-tertiary rounded-3">
        <img src="/imagem/@Model.Capa" style="width:350px; height:350px" alt="Imagem do Prato" />
        <h1 class="text-body-emphasis">@Model.Nome</h1>
        <p class="col-lg-8 mx-auto fs-5 text-muted">
            @Model.Descricao
        </p>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Valor: R$ @Model.Valor</li>
        </ul>

        <a class="btn btn-info w-50 mt-3" asp-controller="Prato" asp-action="Index">
            <i class="bi bi-arrow-left-circle"></i> Voltar
        </a>
    </div>
</div>
